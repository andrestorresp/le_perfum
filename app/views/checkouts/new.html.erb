<div class="container">
  <div class="card">
    <div class="card-body">
      <%= form_with(model: @checkout, url: product_checkouts_path(@product)) do |form| %>
        <div class="form-inputs">
          <%= form.label :transaction_date %>
          <%= form.date_field :transaction_date, required: true, autofocus: true, class: "form-control" %>

          <%= form.label :price %>
          <%= form.text_field :price, required: true, autofocus: true, class: "form-control" %>
        </div>

        <div class="form-actions text-center">
          <%= form.submit "Create Checkout", class: "btn btn-primary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
