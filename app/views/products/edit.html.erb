<div class="container">
  <div class="card">
    <div class="card-body">
      <%= simple_form_for(@product) do |f| %>
        <%= f.error_notification %>
        <div class="form-inputs">
          <%= f.input :name, required: true, autofocus: true, input_html: { autocomplete: "name" } %>
          <%= f.input :description, required: true, autofocus: true, input_html: { autocomplete: "description" } %>
          <%= f.input :price, required: true, autofocus: true, input_html: { autocomplete: "price" } %>
          <%= f.file_field :photo, as: :file %>
        </div>
        <div class="form-actions text-center">
          <%= f.button :submit, "Actualizar Producto", class: "btn btn-primary" %>
        </div>
      <% end %>
      <%= cl_image_tag @product.photo.key, width: 300, height: 200, style: "border-radius: 10px;" %>

    </div>
  </div>
</div>
