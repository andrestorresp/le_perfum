<div class="container py-5">
  <div class="row justify-content-center">
    <div class= "col-12 col-md-6 ">
        <div class="form_card">
          <img src="https://angelnumber.org/wp-content/uploads/2021/04/Perfume-Dream-Meaning-700x400.jpg" alt="" class="form_img">
        </div>
      </div>
    <div class= "col-12 col-md-6 ">
      <div class="form_card p-3">
        <h2>AÃ±adir nuevo producto</h2>
        <%= simple_form_for(@product) do |f| %>
        <%= f.error_notification %>
        <div class="form-inputs">
          <%= f.input :name, required: true, autofocus: true, input_html: { autocomplete: "name" } %>
          <%= f.input :description, required: true, autofocus: true, input_html: { autocomplete: "description" } %>
          <%= f.input :price, required: true, autofocus: true, input_html: { autocomplete: "price" } %>
          <%= f.input :photo, as: :file %>
        </div>
        <div class="form-actions text-center">
          <%= f.button :submit, "Create product", class: "btn btn-primary" %>
        </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
